{
    "env": {
        "name": "pointrobo-v0",
        "normalize": true,
        "action_low": -1.0,
        "action_high": 1.0,
        "goal_reward": 8,
        "collision_reward": -7,
        "step_reward": -0.059,
        "buffer_size": 100,
        "grid_size": 32,
        "num_obj_max": 0,
        "obj_size_avg": 8, 
        "robot_radius": 1,
        "max_goal_dist": null
    },
    "cae": {
        "pooling": "max",
        "latent_dim": 16,
        "conv_filters": [4, 8, 16],
        "weights_path": "../models/cae/model_num_5_size_8.h5"
    },
    "agent": {
        "name": "DDPG",
        "max_grad": 1,
        "lr_actor": 1e-4,
        "lr_critic": 1e-4,
        "actor_units": [400, 300],
        "critic_units": [400, 300],
        "sigma": 0.1,
        "tau": 0.005,
        "n_warmup": 1e4,
        "memory_capacity": 1e6,
        "batch_size": 256,
        "update_interval": 1,
        "gpu": 0
    },
    "trainer": {
        "train_from_scratch" : true,
        "mode": "train",
        "relabeling_mode": "straight_line",
        "max_steps": 1e5,
        "episode_max_steps": 50,
        "n_experiments": 1,
        "show_progress": false,
        "show_progress_interval": 100,
        "save_model_interval": 1e4,
        "save_summary_interval": 1e3,
        "logdir": "results/hyperparam_tuning",
        "logging_level": "INFO",
        "model_dir": "../models/agents",
        "dir_suffix": "",
        "use_prioritized_rb": false,
        "use_nstep_rb": false,
        "n_step": 4,
        "test_interval": 1e4,
        "show_test_progress": false,
        "test_episodes": 100,
        "save_test_path": false,
        "save_test_path_sep": false,
        "save_test_movie": false,
        "show_test_images": false,
        "normalize_obs": false
    },
    "hyper_tuning": {
        "num_of_runs": 20,
        "param_1":{
            "group": "agent",
            "name": ["lr_actor"],
            "low_bound": 1e-5,
            "high_bound": 1e-3,
            "scale": "log"
        },
        "param_2": {
            "group": "agent",
            "name": ["lr_critic"],
            "low_bound": 1e-5,
            "high_bound": 1e-3,
            "scale": "log"
        },
        "param_3": {
            "group": "agent",
            "name": ["tau"],
            "low_bound": 0.0005,
            "high_bound": 0.01,
            "scale": "log"
        },
        "param_4": {
            "group": "agent",
            "name": ["max_grad"],
            "low_bound": 0.1,
            "high_bound": 1,
            "scale": "linear"
        }
    }
}